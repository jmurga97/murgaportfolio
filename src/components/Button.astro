<a
  href={Astro.props.link}
  target="_blank"
  rel="noopener"
  class={`${Astro.props.class} inline-flex items-center px-4 py-2 text-sm font-medium
  text-gray-900 bg-white border border-gray-200
  rounded-lg hover:bg-gray-100 hover:text-purple-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-purple-700 transition`}
  >{Astro.props.title}<svg
    class="w-3 h-3 ms-2 rtl:rotate-180"
    aria-hidden="true"
    fill="none"
    viewBox="0 0 14 10"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M1 5h12m0 0L9 1m4 4L9 9"></path>
  </svg></a
>
